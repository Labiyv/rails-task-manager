<h1>My Tasks</h1>
<div class="tasks">
  <% @tasks.each  do |task| %>
  <div class="task">
    <% if task.completed %>
    <input type="checkbox" checked='true' disabled="true">
    <% else %>
    <input type="checkbox" disabled="true">
    <% end %>
    <a><%= link_to task.title, task_path(task) %></a>
    <p>:</p>

    <a><%= link_to "delete", task_path(task), method: :delete %></a>
  </div>
  <% end %>
  <a><%= link_to "+ Add A new Task", tasks_new_path %></a>
 </div>
